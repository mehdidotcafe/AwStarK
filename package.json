{
  "name": "awstark",
  "version": "0.1.1",
  "description": "node.js typescript (AWS serverless) starter kit",
  "author": "mehdidotcafe",
  "private": false,
  "license": "GPL-3.0-or-later",
  "scripts": {
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint:staged": "lint-staged",
    "build": "sam build && ./scripts/post-build.sh",
    "db:migrate": "prisma migrate deploy",
    "start": "rm -r .aws-sam & concurrently --names \"tsc,sam\" -c \"bgBlue.bold,bgMagenta.bold\" \"yarn start:tsc\" \"yarn start:sam\"",
    "start:tsc": "tsc -w",
    "start:sam": "sam local start-api 2>&1 | tr '\\r' '\\n'",
    "prepare": "husky install || true"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.92",
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.4",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "concurrently": "^7.6.0",
    "esbuild": "^0.17.7",
    "eslint": "^8.28.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.0.5",
    "lint-staged": "^13.2.0",
    "prisma": "^4.9.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@middy/core": "^4.2.3",
    "@middy/http-json-body-parser": "^4.2.3",
    "@prisma/client": "^4.9.0",
    "zod": "^3.20.2"
  },
  "lint-staged": {
    "**/*.ts": [
      "npm run lint:fix"
    ]
  }
}
