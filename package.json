{
  "name": "awstark",
  "version": "0.5.0",
  "description": "node.js typescript (AWS serverless) starter kit",
  "author": "mehdidotcafe",
  "private": false,
  "license": "GPL-3.0-or-later",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint:staged": "lint-staged",
    "build": "sam build && ./scripts/post-build.sh",
    "db:migrate": "prisma migrate deploy",
    "start": "rm -r .aws-sam & concurrently --names \"tsc,sam\" -c \"bgBlue.bold,bgMagenta.bold\" \"yarn start:tsc\" \"yarn start:sam\"",
    "start:tsc": "tsc -w",
    "start:sam": "dotenv sam local start-api 2>&1 | tr '\\r' '\\n'",
    "prepare": "husky install || true"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.114",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "concurrently": "^8.0.1",
    "dotenv-cli": "^7.2.1",
    "esbuild": "^0.17.15",
    "eslint": "^8.38.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "prisma": "4.12.0-integration-rtld-deepbind.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@middy/core": "^4.2.8",
    "@middy/http-json-body-parser": "^4.2.8",
    "@prisma/client": "4.12.0-integration-rtld-deepbind.3",
    "zod": "^3.21.4"
  },
  "lint-staged": {
    "**/*.ts": [
      "npm run lint:fix"
    ]
  }
}
